<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="d.s.dao.MenuDao">
	<sql id="my_sql">
		select menu_id,menu_name,menu_url,menu_state,menu_remark,top_id,menu_paixu
		from menu_tb
	</sql>
	<resultMap type="d.s.domain.MenuBean" id="menu">
		<id property="menuId" column="menu_id"/>
		<result property="menuName" column="menu_name"/>
		<result property="menuUrl" column="menu_url"></result>
		<result property="menuState" column="menu_state"/>
		<result property="menuRemark" column="menu_remark"></result>
		<result property="topId" column="top_id"></result>
		<result property="menuPaixu" column="menu_paixu"></result>
	</resultMap>
		<select id="selectMenu" parameterType="MenuBean" resultMap="menu">
		select * from menu_tb
		<where>
			<if test="menuName != null and menuName != ''">
				menu_name like "%"#{menuName}"%"
			</if>
			<if test="menuState != null">
				and menu_state =#{menuState}
			</if>
			
		</where>
			order by menu_paixu
			limit #{currentNum},8
	</select>
	<select id="getMenus" resultMap="menu">
		select * from menu_tb
		where menu_state =1
			order by menu_paixu 
	
	</select>
	
	<select id="max" parameterType="MenuBean" resultType="int">
		select count(*) from menu_tb
		<where>
			<if test="menuName != null and menuName != ''">
				menu_name like "%"#{menuName}"%"
			</if>
			<if test="menuState != null">
				and menu_state =#{menuState}
			</if>
		</where>
	</select>
	
	<select id="getMenu" parameterType="int" resultMap="menu">
		SELECT m.*
		from role_menu_tb rm , menu_tb m
		where m.menu_id=rm.menu_id and rm.role_id =#{roleId} and m.menu_state = 1
	</select>
	
	<select id="getTopMenu"  resultMap="menu">
		SELECT *
		from  menu_tb 
		where top_id=0 and menu_state=1
	</select>
	<select id="getMaxPaixu"  resultType="int">
		SELECT max(menu_paixu) MAX FROM menu_tb 
	</select>
	<select id="getMenuById"  parameterType="int" resultMap="menu" >
		SELECT *
		from  menu_tb where menu_id=#{menuId}  
	</select>

	<insert id="insertMenu" parameterType="MenuBean" >
		insert into menu_tb
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="menuName != null">
			menu_name,
			</if>
			<if test="topId != null">
			top_id,
			</if>
			<if test="menuState != null">
			menu_state,
			</if>
			<if test="menuUrl != null">
			menu_url,
			</if>
			<if test="menuRemark != null">
			menu_remark,
			</if>
			<if test="menuPaixu != null">
			menu_paixu,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="menuName != null">
			#{menuName},
			</if>
			<if test="topId != null">
			#{topId},
			</if>
			<if test="menuState != null">
			#{menuState},
			</if>
			<if test="menuUrl != null">
			#{menuUrl},
			</if>
			<if test="menuRemark != null">
			#{menuRemark},
			</if>
			<if test="menuPaixu != null">
			#{menuPaixu},
			</if>
		</trim>
	
	</insert>
	<update id="updateMenu" parameterType="MenuBean">
		update menu_tb
		<set>
			<if test="menuName != null">
				menu_name = #{menuName},
			</if>
			<if test="topId != null">
				top_id = #{topId},
			</if>
			<if test="menuState != null">
				menu_state = #{menuState},
			</if>
			<if test="menuUrl != null">
				menu_url = #{menuUrl},
			</if>
			<if test="menuRemark != null">
				menu_remark = #{menuRemark},
			</if>
			<if test="menuPaixu != null">
				menu_paixu= #{menuPaixu},
			</if>
		</set>
		where menu_id = #{menuId}
	</update>
	
	<delete id="deleteMenu" parameterType="int">
		delete from menu_tb where menu_id = #{menuId}
	</delete>
	<delete id="deleteRoleMenu" parameterType="int">
		delete from role_menu_tb where menu_id = #{menuId}
	</delete>
</mapper>